"""Build configuration for bazel tools"""

load("@bazel_skylib//rules:common_settings.bzl", "bool_flag")

# Flag to control lwlog source mode
bool_flag(
    name = "use_lwlog_source",
    build_setting_default = False,
    visibility = ["//visibility:public"],
)

config_setting(
    name = "lwlog_source_mode",
    flag_values = {":use_lwlog_source": "True"},
    visibility = ["//visibility:public"],
)