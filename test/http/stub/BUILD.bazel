load("@rules_python//python:defs.bzl", "py_binary", "py_test")

# Export stub_integration_test.py so it can be used by other test targets
exports_files(["stub_integration_test.py"])

py_test(
    name = "stub_client",
    srcs = ["stub_client_test.py"],
    main = "stub_client_test.py",
    visibility = ["//visibility:public"],
    # Don't run this directly - use stub_integration test below
    tags = ["manual"],
)

py_binary(
    name = "stub_server",
    srcs = ["stub_server.py"],
    main = "stub_server.py",
    visibility = ["//visibility:public"],
)

py_test(
    name = "stub_integration",
    srcs = ["stub_integration_test.py"],
    data = [
        ":stub_client",
        ":stub_server",
    ],
    main = "stub_integration_test.py",
    args = [
        "$(location :stub_client)",
        "$(location :stub_server)",
    ],
    # exclusive: prevent parallel execution with other tests (port conflicts)
    # requires-network: test uses network (local server on specific port)
    tags = ["exclusive", "requires-network"],

    target_compatible_with = select({
        "@platforms//cpu:wasm32": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
)
